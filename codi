public void datos(){
//System.out.println("Ingrese sus valores");
for(int i=0;i<3;i++){
for(int j=0;j<4;j++){
    
    System.out.println("Ingrese sus valores");
   v=leer.nextInt(); 
arr[i][j]=v;
 
}
System.out.println("***************************");
}
}
public void resta(){
for(int i=0;i<3;i++){
    o=0;
    for(int j=1;j<4;j++){
r=arr[i][j];
o=o-r;

}
    o=o+arr[0][0];
    System.out.println("Su resultado de la fila "+i+"es:  "+o);
}
}
